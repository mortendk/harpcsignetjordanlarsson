<header class="relative w-full z-20 h-16 md:h-20" x-data="{ openmenu: false }">

  {# skip link #}
  <a href="#main" class="sr-only focus:not-sr-only sr-tab">Skip to Content</a>

  {# main wrap header elements #}
  <div class="flex flex-row h-16 justify-between items-center bg-sky-600 border-b border-sky-400 shadow px-2">
    {# quick n fast logo #}
    <a href="/" title="{{site.title}}" class="mt-14 w-16 h-16 overflow-hidden inline-flex items-center md:mr-4 hover:rotate-45 transition">
      <img src="/themes/{{ theme }}/assets/img/menu-home.png" alt="Jordan Larson" width="64" height="64" class="shadow-lg rounded-full">
      <h1 class="sr-only">{{site.title}}</h1>
    </a>
    {# level 1 #}
    {%- for item in collections.all | eleventyNavigation("main") %}
      {# test if theres children to the first level of menu items #}
      <a href="{{ item.url }}"
      {% if item.url in page.url %}
          aria-current="page" class="text-white  font-bold underline"
        {% else  %}
          class="text-white "
        {% endif %}
        {# if target #}
        {% if item.target %}
          target="_blank" rel="noopener"
        {% endif %}
      >

        {% if item.icon %}
          <div class="w-8 hover:text-purple-300
            {% if item.url in page.url %}text-purple-400 {% else %}text-white  {% endif %}
          ">{% include item.icon %}</div>
        {% endif %}
        {# {{ item.title }} #}
      </a>
    {% endfor %}

  </header>
  {% include "notification.njk" %}